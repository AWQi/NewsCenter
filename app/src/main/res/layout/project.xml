<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/flowborder"
    android:id="@+id/project"
    android:layout_width="190dp"
    android:layout_height="150dp"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/project_icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="4"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/wel" />
    <!--.XCRoundRectImageView  自定义  圆角图片-->
    <!-- android:scaleType="center"  中部裁剪填充-->
<!--    <com.example.dell.newscenter.myview.base.XCRoundRectImageView
        android:id="@+id/project_icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="4"
        android:scaleType="center"
        android:layout_centerInParent="true"
        android:src="@drawable/wel" />-->
    <TextView
        android:id="@+id/project_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:gravity="center"
        android:text="title"/>
    <TextView
        android:id="@+id/project_kind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:gravity="right"
        android:text="分类"/>

</LinearLayout>