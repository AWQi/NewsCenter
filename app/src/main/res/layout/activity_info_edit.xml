<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myview.InfoActivity.userinfo.InfoEditActivity">
    <com.example.dell.newscenter.myview.base.MyToolBar
        app:title="信息修改"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.dell.newscenter.myview.base.MyToolBar>
    <RelativeLayout
        android:id="@+id/infoEditHeadRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="头像"
            android:textSize="20sp" />
        <com.example.dell.newscenter.myview.base.CircleImageView
            android:id="@+id/infoEditHeadCV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/psb" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/infoEditNameRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="昵称"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/infoEditNameTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="AWQI"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infoEditQrcodeRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="二维码名片"
            android:textSize="20sp" />
        <com.example.dell.newscenter.myview.base.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/qr_code" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/infoEditGenderRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="性别"
            android:textSize="20sp" />

        <com.example.dell.newscenter.myview.base.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/secrecy" />
    </RelativeLayout>
</LinearLayout>