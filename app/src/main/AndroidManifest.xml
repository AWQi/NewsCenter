<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.newscenter">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!--
    android:name=".utils.ApplicationUtil"
    指定app启动时自动初始化的一个application 可以用于获取保存一些全局的信息
    -->
    <application
        android:name=".utils.ApplicationUtil"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GuideActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".myview.videoplayactivity.VideoPlayActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".myview.InfoActivity.fans.MyFansActivity"
            android:label="我的粉丝"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".myview.InfoActivity.attention.MyAttentionActivity"
            android:label="我的关注"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".myview.InfoActivity.dynamic.MyDynamicActivity"
            android:label="我的动态"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".myview.InfoActivity.history.HistoryActivity"
            android:label="历史记录"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".myview.InfoActivity.collection.MyCollectionActivity"
            android:label="我的收藏"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".myview.InfoActivity.OfflineCacheActivity"
            android:label="离线缓存"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".myview.InfoActivity.InfoEditActivity"
            android:label="修改信息"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".myview.InfoActivity.UserInfoActivity"
            android:label="个人主页"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="用户登录"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".activity.RegisterActivity"></activity>
    </application>

</manifest>