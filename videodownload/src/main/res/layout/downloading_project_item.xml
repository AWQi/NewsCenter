<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/downloadingProjectItemImageIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/downloadingProjectItemTitleTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="title"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/downloadingProjectItemAuthorIconIV"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/author" />

                <TextView
                    android:id="@+id/downloadingProjectItemAuthorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/downloadingProjectItemAuthorIconIV"
                    android:text="author"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">


                <ImageView
                    android:id="@+id/downloadingProjectItemSizeIconIV"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/file" />

                <TextView
                    android:id="@+id/downloadingProjectItemSizeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/downloadingProjectItemSizeIconIV"
                    android:text="size"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/downloadingProjectItemDetailsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="详情>"
                    android:textSize="20sp" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>